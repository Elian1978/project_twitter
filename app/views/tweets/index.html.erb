<div class="container text-center">
  <p id="notice"><%= notice %></p>
</div>

<% if current_user %>
  <div class="thoughts">
    <h1>What are you thinking?</h1>
    <%= render 'form', tweet: @tweet %>
  </div>
<% end %>  

<div class="main">
<% @tweets.reverse.each do |tweet| %>

  <div class="card my-3" style="width: 30rem;">
  <%= image_tag(tweet.user.profile_picture, class: 'card-img-top') %>
    <div class="card-body">
      <h5 class="card-title"><%= tweet.user.username %></h5>
      <p class="card-text"><%= tweet.content %></p>
      <p><%= time_ago_in_words(tweet.created_at) %> ago</p>
      <%= link_to 'Show', tweet, class: 'btn btn-primary' %> <%= link_to 'Edit', edit_tweet_path(tweet), class: 'btn btn-primary' %> <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %><br />
      <p>Retweets: <%= tweet.retweet %></p>
    </div>
  </div>
<% end %>
</div>
